<Main>
GridLayout:
    pos: root.pos
    size: root.size
    cols: 3
    padding: 10
    spacing: 10

    SpeedMeter:
        id: speed
        startAngle: -120
        endAngle: 120
        subtick: 5
        label: 'Km/h'
        value: speed_value.value

    SpeedMeter:
        id: clock
        min: 0
        max: 12
        tick: 1
        displayFirst: False
        startAngle: 0
        endAngle: 0
        subtick: 5

    SpeedMeter:
        id: fuel
        startAngle: 150
        endAngle: 20
        max: 4
        tick: 1

    Slider:
        id: speed_value

    Slider:
        value: clock.value
        max: 12

    Switch:
        id: switch

    SpeedMeter:
        id: temperature
        min: 35
        max: 43
        tick: 1
        startAngle: 90
        endAngle: 270

    SpeedMeter:
        id: rpm
        max: 8
        tick: 1
        startAngle: -120
        endAngle: 120
        subtick: 4
        label: 'rpm'

    SpeedMeter:
        id: pi
        min: 0
        startAngle: -150
        endAngle: 90

    SpeedMeter:
        id: default
        label: 'default'
